<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_1">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General Purpose Registers"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/pink"
                android:textStyle="bold"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:columnCount="2">
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
            </GridLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_1"
                android:layout_margin="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Flags"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="6dp"
                android:layout_marginHorizontal="12dp"
                android:textSize="16sp"
                android:textColor="@color/pink"
                android:textStyle="bold"/>
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="8dp"
                android:columnCount="4">
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
                <include
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    layout="@layout/item_register"
                    android:layout_columnWeight="1"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="12dp"
        android:elevation="8dp"
        android:layout_margin="8dp"
        android:background="@drawable/bg_exec"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp">
            <TextView
                android:id="@+id/tv_exec_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:text="Executing:"
                android:textColor="@color/black"
                android:layout_alignBaseline="@+id/tv_exec"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_exec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="4dp"
                android:textColor="@color/gray_1"
                android:textSize="16sp"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="MOV AL,0Ah"
                android:fontFamily="@font/source_code_pro_regular"
                android:layout_toStartOf="@+id/ib_open_editor"
                android:layout_toEndOf="@+id/tv_exec_label"
                android:background="@drawable/bg_exec_mini"/>
            <ImageButton
                android:id="@+id/ib_open_editor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:padding="4dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_exec_mini"
                android:src="@drawable/ic_baseline_arrow_upward_24"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:padding="6dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_yellow_border"
                android:foreground="@drawable/ripple">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_call_missed_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Step Back"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="4dp"
                android:padding="6dp"
                android:orientation="horizontal"
                android:gravity="center"
                android:clickable="true"
                android:focusable="true"
                android:background="@drawable/bg_pink_border"
                android:foreground="@drawable/ripple">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_browser_updated_24"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:text="Execute All"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="12dp"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:background="@drawable/bg_green"
            android:foreground="@drawable/ripple_green">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_baseline_play_arrow_24"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="Execute"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>