<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white_1"/>
            <corners
                android:radius="4dp"/>
            <stroke
                android:color="@color/gray_1"
                android:width="1dp"/>
            <padding
                android:right="@dimen/item_reg_margin"
                android:left="@dimen/item_reg_margin"
                android:top="@dimen/item_reg_margin"
                android:bottom="@dimen/item_reg_margin"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white_1"/>
            <corners
                android:radius="4dp"/>
            <stroke
                android:color="@color/gray_1"
                android:width="1dp"/>
            <padding
                android:right="@dimen/item_reg_margin"
                android:left="@dimen/item_reg_margin"
                android:top="@dimen/item_reg_margin"
                android:bottom="@dimen/item_reg_margin"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <solid
                android:color="@color/white"/>
            <corners
                android:radius="4dp"/>
            <stroke
                android:color="@color/gray_1"
                android:width="1dp"/>
            <padding
                android:right="@dimen/item_reg_margin"
                android:left="@dimen/item_reg_margin"
                android:top="@dimen/item_reg_margin"
                android:bottom="@dimen/item_reg_margin"/>
        </shape>
    </item>
</selector>